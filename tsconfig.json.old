{
  "compilerOptions": {
    "checkJs": true,
    "target": "ES2022",
    "module": "commonjs",
    
    // "module": "ESNext",
    "outDir": "./dist/",
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    
    "typeRoots": [
      "node_modules/@types",
      //   "node_modules/gcp-metadata/build/src",
      "types"
    ],
    "sourceMap": false,
    "baseUrl": "./botserver",
    "allowJs": true
  },
  "include": ["./**/*.ts", "botserver/deploy.ts"],
  "exclude": [
      "node_modules",
    "dist"
  ]
}
